const fs = require("fs");
const gk=(s,d)=>{
  return new Promise((resolve,reject)=>{
    fs.access(s,err=>{
      if(err)
        reject("Source File does not exists");
      else{
        fs.readFile(s,(err,data)=>{
          if(err)
            reject("Error reading content in file");
          else{
            fs.writeFile(d,data,err=>{
              resolve("Content written to file successfully");
            });
          }
        });
      }
    });
  });
};
module.exports=gk;
