const fs = require("fs");
const gk=(file,data)=>{
  return new Promise((resolve,reject)=>{
    fs.access(file,err=>{
      if(err)
        reject("File does not exists provide another name");
      else{
        fs.writeFile(file,data,(error) => {
          if(error)
            reject("Error writing content in file");
          else
            resolve("Content appended to file successfully");
        });}
    });
  });
};
module.exports=gk;
