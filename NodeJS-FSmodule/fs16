const fs = require("fs");
const gk=(file,data)=>{
  return new Promise((resolve,reject)=>{
    fs.access(file,err=>{
      if(err){
        fs.writeFile(file,data,(error) => {
          if(error)
            reject("Error writing content in file");
          else
            resolve("Content written to file successfully");
        });}
      else
        reject("File already exists provide another name");
    });
  });
};
module.exports=gk;
